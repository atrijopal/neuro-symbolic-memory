# .env
# Configuration for Neuro-Symbolic Memory Environment

# --- Paths ---
# Leave empty to use default (relative to project root)
# DATA_DIR=./data
# SQLITE_DB_PATH=./data/memory.db
# CHROMA_DIR=./data/chroma

# --- Runtime Parameters ---
RAM_CONTEXT_SIZE=8
TOP_K_MEMORIES=3
ASYNC_WORKERS=1

# --- Confidence Thresholds ---
MIN_CONFIDENCE_TO_STORE=0.65
MIN_COREF_CONFIDENCE=0.8

# --- Model Configuration ---
# Ollama models
GENERATION_MODEL=llama3:8b
EXTRACTION_MODEL=phi3:mini

# Embedding models (HuggingFace)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# --- API Configuration ---
OLLAMA_BASE_URL=http://localhost:11434
